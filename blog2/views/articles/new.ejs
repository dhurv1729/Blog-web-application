<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Blog</title>

    <style>

        .img-thumbnail {
            height: 100px;
            margin-right: 5px;
        }
        .card-body {
            border: 1px solid rgb(221, 170, 170);
            border-radius: 4px;
            background-color: #f2f2f2;
        }
    </style>

</head>
<body>

    
    <div class="container mt-4 mb-4">
        <%- include('navbar') %>
    </div>

    <div class="container">
        <h1>New Article</h1>
        <form action="/articles" method="POST">
            <%- include('_form_fildes') %>    
        </form>
        
    </div>
    <div class="container mt-4">
        <h6 class="mb-2">Add Images:</h6>
        <form action="/articles/upload" method="post" enctype="multipart/form-data">
            <input type="file" name="file" id="file" class="file">
            <input type="submit" value="Submit">
        </form>
    </div>
    <div class="container mt-4">
        <% urls.forEach(url => { %>
            <div clss="card mt-4">
                <div class="card-body mb-1">
                    <img src="./uploads/<%=url.imageName%>" class="img-thumbnail mr-2" alt="...">
                    <span style="color: blue; background-color: #bed2f8;">
                        http://localhost/articles/uploads/<%=url.imageName%>
                    </span> 
                    Use this link to refer to this image
                    <br>
                </div>
            </div>
        <% }) %>
    </div>
</body>
</html>