        a {
            text-decoration: none;
        }
        img {
            max-height: 300px;
        }
    </style>

</head>
<body>
    <div class="container mt-4 mb-4">
        <%- include('navbar') %>
    </div>

    <div class="container">
        <h1 class="mb-1">
            <a href="./<%=article.id%>"><%=article.title%></a>
        </h1>

        <div class="text-muted mb-2"><%=article.createdAt.toLocaleDateString() %></div>

        <div class="mt-2">
            <%- article.sanitizedHtml %>
        </div>
    </div>


</body>
</html>